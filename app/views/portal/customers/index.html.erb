<div class="page-title">
  <div class="title_left">
    <h3>客户列表</h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="输入客户姓名或昵称">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">搜索</button>
        </span>
      </div>
    </div>
  </div>
</div>

<div class="clearfix"></div>

<% if @customers.empty? %>
<div class="x_panel">
  <div class="x_content">
    <div class="no-results"><无数据显示><br /><%= link_to '新建客户', @action, class: 'btn btn-primary' %></div>
  </div>
</div>
<% else %>            
<div class="x_panel">
  <div class="x_content">
    <div class="content-list">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>头像</th>
            <th>客户ID</th>
            <th>昵称</th>
            <th>姓名</th>
            <th>手机</th>
            <th>是否绑定微信</th>
            <th>添加日期</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <%= render @customers %>
        </tbody>
      </table>
    </div>
  </div>
  <div style="text-align: center;"><%= will_paginate @customers, renderer: BootstrapPagination::Rails %></div>
</div>

<% end %>