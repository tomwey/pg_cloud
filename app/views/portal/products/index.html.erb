<% content_for :styles do %>
<%= stylesheet_link_tag  'products' %>
<% end %>

<div class="page-title">
  <div class="title_left">
    <h3>产品列表</h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="输入产品名称">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">搜索</button>
        </span>
      </div>
    </div>
  </div>
</div>

<div class="clearfix"></div>

<% if @products.empty? %>
<div class="x_panel">
  <div class="x_content">
    <div class="no-results"><无数据显示><br /><%= link_to '新建产品', @action, class: 'btn btn-primary' %></div>
  </div>
</div>
<% else %>            
<div class="x_panel">
  <div class="x_content">
    <div class="content-list">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>缩略图</th>
            <th>产品ID</th>
            <th>产品名</th>
            <th>原价</th>
            <th>折扣价</th>
            <th>照片数量</th>
            <th>库存</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @products %>
        </tbody>
      </table>
    </div>
  </div>
  <div style="text-align: center;"><%= will_paginate @products, renderer: BootstrapPagination::Rails %></div>
</div>

<% end %>