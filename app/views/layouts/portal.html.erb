<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= render_page_title %>
  <!--meta name="viewport" content="width=device-width, initial-scale=1"-->
  <!-- non responsive -->
  <%= stylesheet_link_tag  'portal', 'data-turbolinks-track' => true %>
  
  <link rel="shortcut icon" href="<%= asset_path("favicon.png") %>" />
  
  <%= yield :styles %>
  
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  
</head>
<body>    
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">云影</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">消息</a></li>
          <li><a href="#">设置</a></li>
          <li><a href="#">个人中心</a></li>
          <li><%= link_to '退出登录', destroy_member_session_path, method: :delete, data: { confirm: '你确定吗？' } %></li>
        </ul>
      </div>
    </div>
  </nav>
  
  <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="<%= controller_name == 'home' ? 'active': '' %>"><a href="#">概览</a></li>
            <li class="<%= controller_name == 'products' ? 'active': '' %>"><a href="<%= portal_products_path %>">产品系统</a></li>
            <li><a href="#">订单系统</a></li>
            <li><a href="#">选片系统</a></li>
            <li><a href="#">客户系统</a></li>
            <li><a href="#">营销系统</a></li>
            <li><a href="#">企业信息</a></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li><a href="">个人中心</a></li>
            <li><a href="">权限系统</a></li>
            <li><a href="">消息</a></li>
            <li><a href="">设置</a></li>
          </ul>
          
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header"><%= @page_header %>
            <% if @action %>
              <a class="btn btn-primary pull-right" href="<%= @action %>" role="button">新建</a>
            <% end %>
          </h1>
          
          <%= yield %>
        </div>
      </div>
    </div>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= yield :scripts %>
</body>
</html>